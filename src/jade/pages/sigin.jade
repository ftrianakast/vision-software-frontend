include ./../includes/header_login

.container(ng-controller="LoginCtrl")
  article.col-xs-12.maincontent
    header.page-header
      h1 Workportal Bizagi
    div.col-md-6.col-md-offset-3.col-sm-8-col-sm-offset-2
      div.panel.panel-default
        div.panel-body
          h1.thin.text-center Ingrese al portal
          form(novalidate="novalidate", name="loginform")
            .form-group(ng-class="{ 'has-error': loginform.username.$invalid || loginform.password.$invalid }")
              div.top-margin
                label Username/Email
                input.form-control(ng-model="username", name="username", required)
              div.top-margin
                label Password
                input.form-control(type="password", ng-model="password", name="password", required)
            hr

            #alert-1.alert.fade(flash-alert='error', active-class='in')
              span.alert-message {{flash.message}}


            div.row
              div.col-lg-8
                b
                  a(popover-placement="top" popover="Recuerde que s√≥lo existe el usuario:admin, password:admin" popover-trigger="mouseenter") Forgot your password?
              dic.col-lg-4.text-right
                button.btn.btn-action.btn-special(ng-click="login()", ng-disabled="loginform.$invalid") Sign in


            div.top-margin


